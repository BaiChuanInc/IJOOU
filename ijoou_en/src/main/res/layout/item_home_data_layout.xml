<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/base_xhdpi">

    <com.angcyo.uiview.widget.GlideImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_test"
        app:r_round_radius="20dp"
        app:r_show_type="ROUND_RECT"/>

    <com.angcyo.uiview.widget.group.PileFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_hdpi"
        app:layout_constraintTop_toBottomOf="@id/image_view">

        <com.angcyo.uiview.widget.GlideImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_test"
            app:r_round_radius="20dp"
            app:r_show_type="ROUND_RECT"/>

        <com.angcyo.uiview.widget.GlideImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_test"
            app:r_round_radius="20dp"
            app:r_show_type="ROUND_RECT"/>

        <com.angcyo.uiview.widget.GlideImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_test"
            app:r_round_radius="20dp"
            app:r_show_type="ROUND_RECT"/>

    </com.angcyo.uiview.widget.group.PileFrameLayout>

    <TextView
        android:id="@+id/like_cnt"
        style="@style/BaseDarkTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/base_xxhdpi"
        android:drawableLeft="@drawable/ico_demo"
        android:text="11110"
        app:layout_constraintRight_toLeftOf="@id/comment_cnt"
        app:layout_constraintTop_toTopOf="@id/comment_cnt"/>

    <TextView
        android:id="@+id/comment_cnt"
        style="@style/BaseDarkTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/base_hdpi"
        android:layout_marginTop="@dimen/base_xxhdpi"
        android:drawableLeft="@drawable/ico_demo"
        android:text="11110"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view"/>
</android.support.constraint.ConstraintLayout>